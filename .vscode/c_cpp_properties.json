            "intelliSenseMode": "macos-clang-arm64",
            "configurationProvider": "ms-vscode.makefile-tools",
            // "compileCommands": "${workspaceFolder}/v2/compile_flags.txt",
            "compilerArgs": [
                "-fblocks"
            ]
        },
        {
            "name": "Linux",
            "includePath": [
                "${workspaceFolder}/**",
                "${workspaceFolder}/v2/deps/**",
                "${workspaceFolder}/v2/src/**",
                "${workspaceFolder}/v2/test"
            ],
            "defines": [],
            "compilerPath": "/usr/bin/clang",
            "cStandard": "c17",
            "intelliSenseMode": "linux-clang-x64"
        }
